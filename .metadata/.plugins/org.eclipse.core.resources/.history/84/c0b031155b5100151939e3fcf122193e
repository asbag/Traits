// Interface
interface Sociable {

	public function like();
	public function share();

}

// Trait
trait Sharable {

	public function share($item)
	{
		// share this item
	}

}

// Class
class Post implements Sociable {

	use Sharable;

	public function like()
	{
		//
	}

}